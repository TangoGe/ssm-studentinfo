<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tango.dao.StudentDao">
	<!-- 插入数据 -->
	<insert id="insert" parameterType="com.tango.entity.Student">
		INSERT INTO `tb_student`
		(`StuCode`,
		`StuName`,
		`Sex`,
		`BirthDate`,
		`TellPhone`,
		`Address`,
		`ClassId`
		)
		VALUES
		(#{'StuCode'},
		#{'StuCode'},
		#{'StuCode'},
		#{'StuCode'},
		#{'StuCode'},
		#{'StuCode'},
		#{'StuCode'}
		);
	</insert>

	<!-- 根据stuId查询数据 -->
	<select id="selectById" parameterType="int"
		resultType="com.tango.entity.Student">
		SELECT `StuId`,
		`StuCode`,
		`StuName`,
		`Sex`,
		`BirthDate`,
		`TellPhone`,
		`Address`,
		`ClassId`
		FROM
		`tb_student` WHERE
		`StuId`=#{StuId};
	</select>

	<!-- 查询student所有数据 -->
	<select id="selectList" resultType="com.tango.entity.Student">
		SELECT `StuId`,
		`StuCode`,
		`StuName`,
		`Sex`,
		`BirthDate`,
		`TellPhone`,
		`Address`,
		`ClassId`
		FROM
		`tb_student`
	</select>

	<!-- 根据ID删除数据 -->
	<delete id="deleteById">
		DELETE FROM `tb_student` WHERE stuId = #{stuId}
	</delete>

	<!-- 根据ID更新数据 -->
	<update id="updateById" parameterType="com.tango.entity.Student">
		UPDATE `tb_student`
		SET
		`StuId` = #{stuId} ,
		`StuCode` = ' #{StuCode} ,
		`StuName` = #{StuName} ,
		`Sex` = #{Sex},
		`BirthDate` = #{BirthDate} ,
		`TellPhone` = '
		#{TellPhone},
		`Address` = #{Address} ,
		`ClassId` = #{ClassId}
		WHERE
		`StuId` = #{stuId} ;
	</update>
</mapper>